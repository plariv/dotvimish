" Pathogen
" Pathogen needs to run before plugin indent on
filetype off
" call pathogen#runtime_append_all_bundles()
execute pathogen#infect()
" generate helptags for everything in runtimepath
execute pathogen#helptags()
set nu
set t_Co=256
set laststatus=2

" set statusline=%F%m%r%h%w\ [TYPE=%Y]\ [POS=%04L,%04v][%p%%]\ [LEN=%L]
set statusline=%F%m%r%h%w\ %{fugitive#statusline()}\ [POS=%04L,%04v][%p%%]\ [LEN=%L]
" change status line bg color depending on mode "
au InsertEnter * hi StatusLine term=reverse ctermbg=red gui=undercurl guisp=Magenta guibg=Red
au InsertLeave * hi StatusLine term=reverse ctermfg=0 ctermbg=white gui=bold,reverse

"Tab stuff
set expandtab
set shiftwidth=4
set smarttab
set softtabstop=4
"set smartindent

" colorscheme leo

" Indent stuff
set autoindent
"set smartindent

"Display current cursor position in lower right corner.
set ruler
inoremap { {<CR><BS>}<Esc>ko
inoremap ( ()<Esc>i )

"--------------------
"NERDTree Settings
"--------------------
nmap <F2> :NERDTreeToggle<CR>
let NERDTreeShowHidden=1
"--------------------

"Forget compatibility with Vi. Who cares.
set nocompatible

"Enable filetypes
filetype on
filetype plugin on
filetype indent on
filetype plugin indent on
syntax on

"Write the old file out when switching between files.
set autowrite

"Want a different map leader than \
"set mapleader = \",";

"Ever notice a slight lag after typing the leader key + command? This lowers
"the timeout.
set timeoutlen=500

"Switch between buffers without saving
set hidden

"Set the color scheme. Change this to your preference. 
"Here's 100 to choose from:
"http://www.vim.org/scripts/script.php?script_id=625
colorscheme twilight
"
"Set font type and size. Depends on the resolution. Larger screens, prefer h20
"set guifont=Menlo:h14

"Better line wrapping 
set wrap
set textwidth=79
set formatoptions=qrn1

"Set incremental searching"
set incsearch

"Highlight searching
set hlsearch

" case insensitive search
set ignorecase
set smartcase

"Hide MacVim toolbar by default
set go-=T
"
"Hard-wrap paragraphs of text
nnoremap <leader>q gqip
"
"Enable code folding
set foldenable
"
"Hide mouse when typing
set mousehide
"
"Shortcut to fold tags with leader ( )usually \) + ft
nnoremap <leader>ft Vatzf
"
" Create dictionary for custom expansions
set dictionary+=/home/plariv/.vim/dict.txt
"
"Opens a vertical split and switches over ( )\v)
nnoremap <leader>v <C-w>v<C-w>l
"
"Bubble single lines (kicks butt)
"http://vimcasts.org/episodes/bubbling-text/
"nmap <C-Up> ddkP
"nmap <C-Down> ddp
"Bubble multiple lines at a time (kicks more butt)
"vmap <C-Up> xkP`[V`]
"vmap <C-Down> xp`[V`]
" Alternatively, Using T Pope's vim-unimpaired plugin handles edge-cases
" and accepts numeric repeat argument
nmap <C-Up> [e
nmap <C-Down> ]e
vmap <C-Up> [egv
vmap <C-Down> ]egv

"Saves time; maps the spacebar to colon
nmap <space> :

"Select text most recently edited or pasted
nmap gV `[v`]
